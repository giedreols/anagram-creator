@{
    ViewData["Title"] = "Naujas žodis";
}

<div class="text-left">

    <form asp-controller="Word" asp-action="Create" method="post">
        <div class="form-actions no-color">
            <p>
                Įrašykite žodį: <input type="text" name="newWord" value="@ViewData["Word"]" />

                Kalbos dalies santrumpa: <input type="text" name="newAbbreviation" value="@ViewData["Abbreviation"]" />

                <input type="submit" value="Išsaugoti" class="btn btn-default" />
            </p>
        </div>

        <p>@ViewData["Message"]</p>

    </form>
</div>