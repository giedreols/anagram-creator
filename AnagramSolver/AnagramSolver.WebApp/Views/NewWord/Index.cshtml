@model NewWordViewModel

@{
	ViewData["Title"] = "Naujas žodis";
}

<div class="text-left">

    <form asp-action="Create" method="post">
        <div class="form-actions no-color">
            <p>
                Įrašykite žodį: <input type="text" name="newWord" value="@ViewData["CurrentWord"]" />

                Kalbos dalies santrumpa: <input type="text" name="newAbbreviation" value="@ViewData["Abbreviation"]" />

                <input type="submit" value="Išsaugoti" class="btn btn-default" />
            </p>
        </div>

        @if (Model != null && !Model.IsSaved)
        {
            <p>@Model.ErrorMessage</p>
        }
    </form>
</div>